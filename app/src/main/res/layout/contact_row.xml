<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/contact_icon"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/contact_name"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/contact_icon"
        android:layout_marginStart="5dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contact_info"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/contact_info"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryTransGray"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintStart_toEndOf="@id/contact_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contact_line"
        app:layout_constraintTop_toBottomOf="@id/contact_name"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/contact_line"
        android:layout_marginBottom="5dp"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>